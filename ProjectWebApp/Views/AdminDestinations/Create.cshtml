@{
    ViewData["Title"] = "Add Featured Destination";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-destinations.css" asp-append-version="true" />
}

<div class="content">

    <div class="card" style="max-width:420px; margin:40px auto;">
        <div class="card-h">
            <span>Add Featured Destination</span>
        </div>

        <div class="card-b">
            <!-- 🔴 VALIDATION SUMMARY (PUT THIS HERE) -->
            <div asp-validation-summary="All" class="validation-summary"></div>
            <form asp-action="Create"
                  method="post"
                  enctype="multipart/form-data"
                  class="featured-admin-card">

                <!-- Image Preview Placeholder -->
                <div class="image-wrapper preview-box">
                    <span id="previewPlaceholder">Image Preview</span>

                    <img id="previewImage"
                         alt="Preview"
                         style="display:none;" />
                </div>


                <!-- City Name -->
                <input class="name-input"
                       name="CityName"
                       placeholder="Enter city name"
                       required />

                <!-- Upload -->
                <label class="upload-btn">
                    <input type="file"
                           name="ImageFile"
                           hidden
                          
                           onchange="previewDestinationImage(this)" />
                    Upload Image
                </label>

                <!-- Submit -->
                <button type="submit"
                        class="btn primary full">
                    + Add Destination
                </button>

                <!-- Cancel -->
                <a asp-action="Index"
                   class="btn full">
                    Cancel
                </a>

            </form>

        </div>
    </div>

</div>
@section Scripts {
    <script src="~/js/admin-destinations-create.js" asp-append-version="true"></script>
}

