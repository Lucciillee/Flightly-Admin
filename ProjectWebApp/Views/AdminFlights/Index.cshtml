@model List<ProjectWebApp.Model.Flight>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Manage Flights";
}

<section class="content">
    @if (TempData["Success"] != null)
    {
        <div class="success-alert">
            @TempData["Success"]
        </div>
    }
    <div class="actions top-actions">
        <a href="/AdminFlights/Create" class="btn primary">+ Add Flight</a>
        <a href="/AdminFlights/Index" class="btn">Refresh</a>
    </div>

    <div class="card">
        <div class="card-h">Flights List</div>

        <div class="card-b">
            <div class="table-scroll">
            <table class="table">
                <thead>
                    <tr>
                        <th>Flight</th>
                        <th>Airline</th>
                        <th>Route</th>
                        <th>Departure</th>
                        <th>Status</th>
                        <th class="right">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var f in Model)
                    {
                        <tr>
                            <td>@f.FlightNumber</td>

                            <td>@f.Airline?.AirlineName</td>

                            <td>@f.OriginAirport.Code → @f.DestinationAirport.Code</td>

                            <td>@f.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>

                            <td>
                                @if (f.Status.StatusName == "On Time")
                                {
                                    <span class="badge ok">On Time</span>
                                }
                                else if (f.Status.StatusName == "Delayed")
                                {
                                    <span class="badge info">Delayed</span>
                                }
                                else if (f.Status.StatusName == "Cancelled")
                                {
                                    <span class="badge danger">Cancelled</span>
                                }
                                else
                                {
                                    <span class="badge">@f.Status.StatusName</span>
                                }
                            </td>

                            <td class="right">

                                <a href="/AdminFlights/Edit/@f.FlightId"
                                   class="btn small @(f.Status.StatusName == "Cancelled" ? "disabled-link" : "")">
                                    Edit
                                </a>


                                <!-- Cancel Button -->
                                <form asp-action="Cancel" asp-controller="AdminFlights" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@f.FlightId" />
                                        <button type="button"
                                                class="btn small danger"
                                                onclick="openCancelModal(@f.FlightId)">
                                            Cancel
                                        </button>

                                </form>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
    <!-- ===========================
       CANCEL FLIGHT MODAL
    =========================== -->
    <div id="cancelModal" class="modal-overlay">
        <div class="modal-card">
            <h3>Cancel Flight</h3>
            <p>Are you sure you want to cancel this flight?</p>

            <div class="modal-actions">
                <button class="btn" onclick="closeCancelModal()">No</button>
                <form id="cancelForm" method="post" asp-action="Cancel" asp-controller="AdminFlights">
                    <input type="hidden" name="id" id="cancelFlightId" />
                    <button type="submit" class="btn danger">Yes, Cancel</button>
                </form>
            </div>
        </div>
    </div>

</section>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-flights.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/admin-flights-index.js" asp-append-version="true"></script>
}
