@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Manage Flights";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-flights.css" asp-append-version="true" />
}

<div class="content">

    <!-- Top Action Bar -->
    <div class="actions-top">
        <a href="/AdminFlights/Create" class="btn primary">+ Add Flight</a>
        <a href="/AdminFlights" class="btn">⟳ Refresh</a>
    </div>


    <!-- Flights Table -->
    <div class="card">
        <div class="card-h">Flights List</div>
        <div class="card-b">
            <table class="table">
                <thead>
                    <tr>
                        <th>Flight</th>
                        <th>Airline</th>
                        <th>Route</th>
                        <th>Departure</th>
                        <th>Status</th>
                        <th class="right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>GF 008</td>
                        <td>Gulf Air</td>
                        <td>BAH → DXB</td>
                        <td>2025-10-30 09:20</td>
                        <td><span class="badge ok">Scheduled</span></td>
                        <td class="right">
                            <a href="/AdminFlights/Edit/1" class="btn small">Edit</a>
                            <button class="btn small danger">Delete</button>
                        </td>
                    </tr>

                    <tr>
                        <td>QR 271</td>
                        <td>Qatar Airways</td>
                        <td>BAH → DOH</td>
                        <td>2025-10-22 15:10</td>
                        <td><span class="badge">Pending</span></td>
                        <td class="right">
                            <a href="/AdminFlights/Edit/2" class="btn small">Edit</a>
                            <button class="btn small danger">Delete</button>
                        </td>
                    </tr>

                    <tr>
                        <td>SV 112</td>
                        <td>Saudia</td>
                        <td>BAH → RUH</td>
                        <td>2025-11-05 18:00</td>
                        <td><span class="badge ok">Scheduled</span></td>
                        <td class="right">
                            <a href="/AdminFlights/Edit/3" class="btn small">Edit</a>
                            <button class="btn small danger">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
