@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Create Flight";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-flights.css" asp-append-version="true" />
}

<div class="content">

    <div class="card">
        <div class="card-h">Create Flight</div>
        <div class="card-b">
            <form class="grid3">

                <label class="field">
                    <span>Airline</span>
                    <select>
                        <option>Gulf Air</option>
                        <option>Qatar Airways</option>
                        <option>Emirates</option>
                        <option>Saudia</option>
                    </select>
                </label>

                <label class="field">
                    <span>Flight No.</span>
                    <input placeholder="GF 008" />
                </label>

                <label class="field">
                    <span>Aircraft</span>
                    <input placeholder="A320neo" />
                </label>

                <label class="field">
                    <span>Origin</span>
                    <input placeholder="BAH" />
                </label>

                <label class="field">
                    <span>Destination</span>
                    <input placeholder="DXB" />
                </label>

                <label class="field">
                    <span>Departure</span>
                    <input type="datetime-local" />
                </label>

                <label class="field">
                    <span>Arrival</span>
                    <input type="datetime-local" />
                </label>

                <label class="field">
                    <span>Base Price</span>
                    <input type="number" placeholder="120" />
                </label>

                <label class="field">
                    <span>Status</span>
                    <select>
                        <option>Scheduled</option>
                        <option>Cancelled</option>
                        <option>Delayed</option>
                    </select>
                </label>

                <div class="actions">
                    <a href="/AdminFlights" class="btn">Cancel</a>
                    <button type="submit" class="btn primary">Create Flight</button>
                </div>

            </form>
        </div>
    </div>
</div>
