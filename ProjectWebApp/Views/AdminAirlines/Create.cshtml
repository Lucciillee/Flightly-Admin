@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Add Airline";
}

<section class="content">

    <div class="card">
        <div class="card-h">Add New Airline</div>

        <div class="card-b">
            <form class="grid3">

                <div class="field">
                    <span>Airline Name</span>
                    <input type="text" />
                </div>

                <div class="field">
                    <span>Country</span>
                    <input type="text" />
                </div>

                <div class="field">
                    <span>Code</span>
                    <input type="text" />
                </div>

                <div class="field">
                    <span>Status</span>
                    <select>
                        <option>Active</option>
                        <option>Inactive</option>
                    </select>
                </div>

                <div class="actions">
                    <a href="/AdminAirlines" class="btn">Cancel</a>
                    <button type="submit" class="btn primary">Save Airline</button>
                </div>

            </form>
        </div>
    </div>

</section>
@section Styles {
    <link rel="stylesheet" href="~/css/admin-airlines.css" asp-append-version="true" />
}
