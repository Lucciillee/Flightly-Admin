@model ProjectWebApp.ViewModels.CreateAirlineVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Add Airline";
}

<section class="content">
    <div class="card">
        <div class="card-h">Add New Airline</div>

        <div class="card-b">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            <form asp-action="Create" asp-controller="AdminAirlines" method="post" enctype="multipart/form-data" class="grid3">

                <div class="field">
                    <span>Airline Name</span>
                    <input asp-for="AirlineName" />

                    <span asp-validation-for="AirlineName" class="error"></span>
                </div>

                <div class="field">
                    <span>Country</span>
                    <select asp-for="CountryId" asp-items="Model.Countries">
                        <option value="">Select Country</option>
                    </select>
                    <span asp-validation-for="CountryId" class="error"></span>
                </div>

                <div class="field">
                    <span>Code</span>
                    <input asp-for="Code" />
                    <span asp-validation-for="Code" class="error"></span>

                </div>

                <div class="field">
                    <span>Status</span>
                    <select asp-for="StatusId" asp-items="Model.Statuses">
                        <option value="">Select Status</option>
                    </select>
                    <span asp-validation-for="StatusId" class="error"></span>
                </div>

                <div class="field">
                    <span>Logo</span>
                    <input type="file" name="LogoFile" accept="image/*" />
                </div>

                <div class="actions">
                    <a href="/AdminAirlines" class="btn">Cancel</a>
                    <button type="submit" class="btn primary">Save Airline</button>
                </div>

            </form>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-airlines.css" asp-append-version="true" />
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
