@model ProjectWebApp.ViewModels.EditAirlineVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit Airline";
}

<section class="content">

    <div class="card">
        <div class="card-h">Edit Airline</div>

        <div class="card-b">

            <!-- 🔴 VALIDATION SUMMARY -->
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <form asp-action="Edit"
                  asp-controller="AdminAirlines"
                  method="post"
                  enctype="multipart/form-data"
                  class="grid3">

                <input type="hidden" asp-for="AirlineId" />

                <div class="field">
                    <span>Airline Name</span>
                    <input asp-for="AirlineName" />
                    <span asp-validation-for="AirlineName" class="error"></span>
                </div>

                <div class="field">
                    <span>Country</span>
                    <select asp-for="CountryId" asp-items="Model.Countries">
                        <option value="">Select Country</option>
                    </select>
                    <span asp-validation-for="CountryId" class="error"></span>
                </div>

                <div class="field">
                    <span>Code</span>
                    <input asp-for="Code" />
                    <span asp-validation-for="Code" class="error"></span>
                </div>

                <div class="field">
                    <span>Status</span>
                    <select asp-for="StatusId" asp-items="Model.Statuses">
                        <option value="">Select Status</option>
                    </select>
                    <span asp-validation-for="StatusId" class="error"></span>
                </div>

                <div class="field">
                    <span>Current Logo</span>

                    @if (!string.IsNullOrEmpty(Model.ExistingLogoUrl))
                    {
                        <img src="@Model.ExistingLogoUrl"
                             width="80"
                             style="border-radius:5px; margin-bottom:10px;" />
                    }
                    else
                    {
                        <p>No logo uploaded</p>
                    }
                </div>

                <div class="field">
                    <span>Upload New Logo</span>
                    <input type="file" name="NewLogo" accept="image/*" />
                </div>

                <div class="actions full-row">
                    <a href="/AdminAirlines" class="btn">Cancel</a>
                    <button type="submit" class="btn primary">Save Changes</button>
                </div>

            </form>

        </div>

    </div>

</section>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-airlines.css" asp-append-version="true" />
}
