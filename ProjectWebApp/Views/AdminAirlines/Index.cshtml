@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Manage Airlines";
}

<section class="content">

    <!-- 🧩 Airline Form Section -->
    <div class="card">
        <div class="card-h">Add / Edit Airline</div>
        <div class="card-b">
            <form class="grid3">

                <div class="field">
                    <span>Airline Name</span>
                    <input type="text" placeholder="Enter airline name" />
                </div>

                <div class="field">
                    <span>Country</span>
                    <input type="text" placeholder="Enter country" />
                </div>

                <div class="field">
                    <span>Code</span>
                    <input type="text" placeholder="e.g. EK, QR, SV" />
                </div>

                <div class="field">
                    <span>Status</span>
                    <select>
                        <option>Active</option>
                        <option>Inactive</option>
                    </select>
                </div>

                <div class="actions">
                    <button class="btn">Clear</button>
                    <button class="btn primary">Save Airline</button>
                </div>

            </form>
        </div>
    </div>

    <!-- 🧾 Airline Table Section -->
    <div class="card">
        <div class="card-h">Airline List</div>
        <div class="card-b">
            <table class="table">
                <thead>
                    <tr>
                        <th>Airline Name</th>
                        <th>Code</th>
                        <th>Country</th>
                        <th>Status</th>
                        <th class="right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Emirates</td>
                        <td>EK</td>
                        <td>UAE</td>
                        <td><span class="badge ok">Active</span></td>
                        <td class="right">
                            <button class="btn small">Edit</button>
                            <button class="btn small danger">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Qatar Airways</td>
                        <td>QR</td>
                        <td>Qatar</td>
                        <td><span class="badge ok">Active</span></td>
                        <td class="right">
                            <button class="btn small">Edit</button>
                            <button class="btn small danger">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</section>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-airlines.css" asp-append-version="true" />
}
