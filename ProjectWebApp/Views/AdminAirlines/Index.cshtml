@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Manage Airlines";

    // FAKE DATA — no database, no model needed
    var airlines = new List<dynamic>
    {
        new { Id = 1, Name = "Emirates", Code = "EK", Country = "UAE",   IsActive = true  },
        new { Id = 2, Name = "Qatar Airways", Code = "QR", Country = "Qatar", IsActive = true  },
        new { Id = 3, Name = "Saudia", Code = "SV", Country = "Saudi Arabia", IsActive = false }
    };
}

<section class="content">

    <!-- Add + Refresh Buttons -->
    <div class="actions top-actions">
        <a href="/AdminAirlines/Create" class="btn primary">+ Add Airline</a>
        <a href="/AdminAirlines/Index" class="btn">Refresh</a>
    </div>

    <!-- Airline Table -->
    <div class="card">
        <div class="card-h">Airline List</div>

        <div class="card-b">
            <table class="table">
                <thead>
                    <tr>
                        <th>Airline Name</th>
                        <th>Code</th>
                        <th>Country</th>
                        <th>Status</th>
                        <th class="right">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var airline in airlines)
                    {
                        <tr>
                            <td>@airline.Name</td>
                            <td>@airline.Code</td>
                            <td>@airline.Country</td>
                            <td>
                                <span class="badge @(airline.IsActive ? "ok" : "")">
                                    @(airline.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="right">
                                <a href="/AdminAirlines/Edit/@airline.Id" class="btn small">Edit</a>
                                <a href="/AdminAirlines/Delete/@airline.Id" class="btn small danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

@section Styles {
    <link rel="stylesheet" href="~/css/admin-airlines.css" asp-append-version="true" />
}
