@model ProjectWebApp.Model.ViewModels.PromoCodeCreateViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Create Promo Code";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-promo.css" asp-append-version="true" />
}

<div class="content">

    <div class="card">
        <div class="card-h">Create Promo Code</div>

        <div class="card-b">

            <!-- IMPORTANT: the form now posts to Create action -->
            <form asp-action="Create" method="post" class="grid2form">

                <label class="field">
                    <span>Code</span>
                    <input asp-for="Code" placeholder="FLY10" />
                </label>

                <label class="field">
                    <span>Status</span>
                    <select asp-for="StatusId" asp-items="ViewBag.StatusList"></select>
                </label>

                <label class="field">
                    <span>Value</span>
                    <input asp-for="Value" type="number" placeholder="10" />
                </label>

                <label class="field">
                    <span>Start Date</span>
                    <input asp-for="StartDate" type="date" />
                </label>

                <label class="field">
                    <span>End Date</span>
                    <input asp-for="EndDate" type="date" />
                </label>

                <label class="field full">
                    <span>Usage Limit</span>
                    <input asp-for="UsageLimit" type="number" placeholder="100 (optional)" />
                </label>

                <label class="field full">
                    <span>Notes</span>
                    <textarea asp-for="Notes" rows="3"></textarea>
                </label>

                <div class="actions">
                    <a href="/AdminPromoCodes" class="btn">Cancel</a>
                    <button class="btn primary" type="submit">Save Promo</button>
                </div>

            </form>

        </div>
    </div>

</div>
