@model ProjectWebApp.Model.ViewModels.PromoCodeEditViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit Promo Code";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-promo.css" asp-append-version="true" />
}

<div class="content">

    <div class="card">
        <div class="card-h">Edit Promo Code</div>

        <div class="card-b">

            <form asp-action="Edit" method="post" class="grid2form">

                <input type="hidden" asp-for="PromoId" />

                <label class="field">
                    <span>Code</span>
                    <input asp-for="Code" />
                </label>

                <label class="field">
                    <span>Status</span>
                    <select asp-for="StatusId" asp-items="ViewBag.StatusList"></select>
                </label>

                <label class="field">
                    <span>Value</span>
                    <input asp-for="Value" type="number" />
                </label>

                <label class="field">
                    <span>Start Date</span>
                    <input asp-for="StartDate" type="date" />
                </label>

                <label class="field">
                    <span>End Date</span>
                    <input asp-for="EndDate" type="date" />
                </label>

                <label class="field full">
                    <span>Usage Limit</span>
                    <input asp-for="UsageLimit" type="number" />
                </label>

                <label class="field full">
                    <span>Notes</span>
                    <textarea asp-for="Notes" rows="3"></textarea>
                </label>

                <div class="actions">
                    <a href="/AdminPromoCodes" class="btn">Cancel</a>
                    <button class="btn primary" type="submit">Save Changes</button>
                </div>

            </form>

        </div>
    </div>

</div>
