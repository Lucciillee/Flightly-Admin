@model ProjectWebApp.Model.ViewModels.PromoCodeEditViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit Promo Code";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-promo.css" asp-append-version="true" />
}

<div class="content">

    <div class="card">
        <div class="card-h">Edit Promo Code</div>

        <div class="card-b">

            <!-- ✅ Validation summary -->
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <form asp-action="Edit" method="post" class="grid2form">

                <input type="hidden" asp-for="PromoId" />

                <div class="field">
                    <span>Code</span>
                    <input asp-for="Code" />
                    <span asp-validation-for="Code" class="error"></span>
                </div>

                <div class="field">
                    <span>Status</span>
                    <select asp-for="StatusId" asp-items="ViewBag.StatusList"></select>
                    <span asp-validation-for="StatusId" class="error"></span>
                </div>

                <div class="field">
                    <span>Value</span>
                    <input asp-for="Value" type="number" />
                    <span asp-validation-for="Value" class="error"></span>
                </div>

                <div class="field">
                    <span>Start Date</span>
                    <input asp-for="StartDate" type="date" />
                    <span asp-validation-for="StartDate" class="error"></span>
                </div>

                <div class="field">
                    <span>End Date</span>
                    <input asp-for="EndDate" type="date" />
                    <span asp-validation-for="EndDate" class="error"></span>
                </div>

                <div class="field full">
                    <span>Usage Limit</span>
                    <input asp-for="UsageLimit" type="number" />
                    <span asp-validation-for="UsageLimit" class="error"></span>
                </div>

                <div class="field full">
                    <span>Notes</span>
                    <textarea asp-for="Notes" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="error"></span>
                </div>

                <div class="actions">
                    <a href="/AdminPromoCodes" class="btn">Cancel</a>
                    <button class="btn primary" type="submit">Save Changes</button>
                </div>

            </form>
        </div>

    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}