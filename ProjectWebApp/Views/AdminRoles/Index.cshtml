@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Admin Role Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-roles.css" asp-append-version="true" />
}

<div class="content stack">

    <!-- Stats -->
    <div class="tiles">

        <div class="card stat blue">
            <div class="icon">👑</div>
            <div>
                <div class="label">Admins</div>
                <div class="value">2</div>
            </div>
        </div>

        <div class="card stat green">
            <div class="icon">🧑‍💼</div>
            <div>
                <div class="label">Sub-Admins</div>
                <div class="value">3</div>
            </div>
        </div>

        <div class="card stat orange">
            <div class="icon">🚫</div>
            <div>
                <div class="label">Disabled</div>
                <div class="value">1</div>
            </div>
        </div>

    </div>


    <!-- Admins Table -->
    <div class="card">
        <div class="card-h">

            <div class="left-tools">
                <!-- 🔍 Search -->
                <div class="search-bar">
                    <input type="text" id="adminSearch" placeholder="Search admins..." />
                </div>

                <!-- 🔽 Filter Dropdown -->
                <select id="roleFilter" class="filter-select">
                    <option value="">All</option>
                    <option value="Admin">Admins</option>
                    <option value="Sub-Admin">Sub-Admins</option>
                </select>
            </div>

            <!-- 🔄 Refresh Button (Right Side) -->
            <button class="btn action-btn" onclick="location.reload()">🔄 Refresh</button>

        </div>

        

        <div class="card-b">

            <table class="table" id="adminsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="right">Actions</th>
                    </tr>
                </thead>

                <tbody>

                    <!-- ADMIN -->
                    <tr>
                        <td>Fatima S.</td>
                        <td>fatima@domain.com</td>
                        <td><span class="badge ok">Admin</span></td>
                        <td><span class="badge ok">Active</span></td>
                        <td class="right">
                            <button class="btn small">Make Sub-Admin</button>
                            <button class="btn small danger">Disable</button>
                        </td>
                    </tr>

                    <!-- SUB-ADMIN -->
                    <tr>
                        <td>Yousef M.</td>
                        <td>yousef@domain.com</td>
                        <td><span class="badge">Sub-Admin</span></td>
                        <td><span class="badge ok">Active</span></td>
                        <td class="right">
                            <button class="btn small">Make Admin</button>
                            <button class="btn small danger">Disable</button>
                        </td>
                    </tr>

                    <!-- SUB-ADMIN -->
                    <tr>
                        <td>Omar K.</td>
                        <td>omar@domain.com</td>
                        <td><span class="badge">Sub-Admin</span></td>
                        <td><span class="badge ok">Active</span></td>
                        <td class="right">
                            <button class="btn small">Make Admin</button>
                            <button class="btn small danger">Disable</button>
                        </td>
                    </tr>

                    <!-- DISABLED ADMIN -->
                    <tr>
                        <td>Nora L.</td>
                        <td>nora@domain.com</td>
                        <td><span class="badge ok">Admin</span></td>
                        <td><span class="badge">Disabled</span></td>
                        <td class="right">
                            <button class="btn small">Enable</button>
                            <button class="btn small">Make Sub-Admin</button>
                        </td>
                    </tr>

                </tbody>
            </table>

        </div>
    </div>

</div>

@section Scripts {
    <script>
               const searchInput = document.getElementById('adminSearch');
        const filterSelect = document.getElementById('roleFilter');
        const rows = document.querySelectorAll('#adminsTable tbody tr');

        function filterTable() {
            const text = searchInput.value.toLowerCase();
            const role = filterSelect.value;

            rows.forEach(row => {
                const rowText = row.textContent.toLowerCase();
                const rowRole = row.children[2].textContent.trim(); // Role column

                const matchesText = rowText.includes(text);
                const matchesRole = role === "" || rowRole === role;

                row.style.display = matchesText && matchesRole ? "" : "none";
            });
        }

        searchInput.addEventListener('keyup', filterTable);
        filterSelect.addEventListener('change', filterTable);

    </script>
}
