@model ProjectWebApp.ViewModels.AdminRolesIndexVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Role Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-roles.css" asp-append-version="true" />
}

<div class="content stack">
    @if (TempData["Success"] != null)
    {
        <div class="success-alert">
            @TempData["Success"]
        </div>
    }
    <!-- ================= CREATE EMPLOYEE FORM ================= -->
    <div class="card">
        <div class="card-h">
            <h2>Create Employee Account</h2>
        </div>

        <div class="card-b">

            <!-- 🔴 FORM VALIDATION SUMMARY -->
            <div asp-validation-summary="All" class="validation-summary"></div>
            <form asp-action="CreateEmployee"
                  asp-controller="AdminRoles"
                  method="post"
                  class="grid2 small-gap">

                <div class="field">
                    <span class="label">First Name</span>
                    <input asp-for="CreateEmployee.FirstName" />
                    <span asp-validation-for="CreateEmployee.FirstName" class="error"></span>
                </div>

                <div class="field">
                    <span class="label">Last Name</span>
                    <input asp-for="CreateEmployee.LastName" />
                    <span asp-validation-for="CreateEmployee.LastName" class="error"></span>
                </div>

                <div class="field">
                    <span class="label">Email</span>
                    <input asp-for="CreateEmployee.Email" />
                    <span asp-validation-for="CreateEmployee.Email" class="error"></span>
                </div>

                <div class="field">
                    <span class="label">Temporary Password</span>
                    <input asp-for="CreateEmployee.TempPassword" />
                    <span asp-validation-for="CreateEmployee.TempPassword" class="error"></span>
                </div>

                <div class="field">
                    <span class="label">Role</span>
                    <select asp-for="CreateEmployee.Role">
                        <option value="">Select Role</option>
                        <option value="Admin">Admin</option>
                        <option value="Sub-Admin">Sub-Admin</option>
                    </select>
                    <span asp-validation-for="CreateEmployee.Role" class="error"></span>
                </div>

                <div class="actions full-row">
                    <button class="btn primary">Create Account</button>
                </div>

            </form>
        </div>
    </div>

    <!-- ================= USER LIST ================= -->
    <div class="card">

        <div class="card-h">

            <div class="left-tools">
                <div class="search-bar">
                    <input type="text" id="adminSearch" placeholder="Search users..." />
                </div>

                <select id="roleFilter" class="filter-select">
                    <option value="">All Roles</option>
                    <option value="Admin">Admin</option>
                    <option value="Sub-Admin">Sub-Admin</option>
                    <option value="Active">Active</option>
                    <option value="Blocked">Blocked</option>
                </select>
            </div>

            <button class="btn action-btn" onclick="location.reload()">🔄 Refresh</button>

        </div>

        <div class="card-b">
            <div class="table-scroll">
            <table class="table" id="adminsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="right">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                                <td>
                                    <span class="badge role @(user.Role == "Admin" ? "admin" : "subadmin")">
                                        @user.Role
                                    </span>
                                </td>

                                <td>
                                    <span class="badge status @(user.IsDeleted ? "blocked" : "active")">
                                        @(user.IsDeleted ? "Blocked" : "Active")
                                    </span>
                                </td>

                            <td class="right">
                                @if (!user.IsDeleted)
                                {
                                    <form asp-action="DeleteEmployee"
                                          asp-controller="AdminRoles"
                                          method="post"
                                          style="display:inline;">
                                        <input type="hidden" name="id" value="@user.IdentityUserId" />
                                        <button class="btn small danger">Delete</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="RestoreEmployee"
                                          asp-controller="AdminRoles"
                                          method="post"
                                          style="display:inline;">
                                        <input type="hidden" name="id" value="@user.IdentityUserId" />
                                        <button class="btn small">Restore</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/admin-roles-index.js" asp-append-version="true"></script>
}

