@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Role Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-roles.css" asp-append-version="true" />
}

<div class="content stack">

    <!-- ================= CREATE EMPLOYEE FORM ================= -->
    <div class="card">
        <div class="card-h">
            <h2>Create Employee Account</h2>
        </div>

        <div class="card-b">
            <form class="grid2 small-gap">

                <label class="field">
                    <span>First Name</span>
                    <input type="text" placeholder="e.g., Ahmed" />
                </label>

                <label class="field">
                    <span>Last Name</span>
                    <input type="text" placeholder="e.g., Ali" />
                </label>

                <label class="field">
                    <span>Email</span>
                    <input type="email" placeholder="e.g., ahmed@domain.com" />
                </label>

                <label class="field">
                    <span>Temporary Password</span>
                    <input type="text" placeholder="At least 6 characters" />
                </label>

                <!-- Role now aligned left under Email -->
                <label class="field">
                    <span>Role</span>
                    <select>
                        <option value="Sub-Admin">Sub-Admin</option>
                        <option value="Admin">Admin</option>
                    </select>
                </label>

                <div class="actions full-row">
                    <button class="btn primary">Create Account</button>
                </div>

            </form>


        </div>
    </div>

    <!-- ================= USER LIST ================= -->
    <div class="card">

        <div class="card-h">

            <div class="left-tools">
                <!-- Search -->
                <div class="search-bar">
                    <input type="text" id="adminSearch" placeholder="Search users..." />
                </div>

                <!-- Filter -->
                <select id="roleFilter" class="filter-select">
                    <option value="">All Roles</option>
                    <option value="Admin">Admin</option>
                    <option value="Sub-Admin">Sub-Admin</option>
                    <option value="Disabled">Disabled</option>
                </select>
            </div>

            <button class="btn action-btn" onclick="location.reload()">🔄 Refresh</button>

        </div>


        <div class="card-b">

            <table class="table" id="adminsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="right">Actions</th>
                    </tr>
                </thead>

                <tbody>

                    <!-- Example Row -->
                    <tr>
                        <td>Fatima S.</td>
                        <td>fatima@domain.com</td>
                        <td><span class="badge ok">Admin</span></td>
                        <td><span class="badge ok">Active</span></td>
                        <td class="right">
                            <button class="btn small">Make Sub-Admin</button>
                            <button class="btn small danger">Disable</button>
                        </td>
                    </tr>

                    <tr>
                        <td>Omar K.</td>
                        <td>omar@domain.com</td>
                        <td><span class="badge">Sub-Admin</span></td>
                        <td><span class="badge ok">Active</span></td>
                        <td class="right">
                            <button class="btn small">Make Admin</button>
                            <button class="btn small danger">Disable</button>
                        </td>
                    </tr>

                    <tr>
                        <td>Sara Q.</td>
                        <td>sara@domain.com</td>
                        <td><span class="badge">Employee</span></td>
                        <td><span class="badge ok">Active</span></td>
                        <td class="right">
                            <button class="btn small">Promote</button>
                            <button class="btn small danger">Disable</button>
                        </td>
                    </tr>

                </tbody>
            </table>

        </div>
    </div>

</div>

@section Scripts {
    <script>
        const searchInput = document.getElementById('adminSearch');
        const filterSelect = document.getElementById('roleFilter');
        const rows = document.querySelectorAll('#adminsTable tbody tr');

        function filterTable() {
            const text = searchInput.value.toLowerCase();
            const role = filterSelect.value;

            rows.forEach(row => {
                const rowText = row.textContent.toLowerCase();
                const rowRole = row.children[2].textContent.trim();

                const matchesText = rowText.includes(text);
                const matchesRole = role === "" || rowRole === role;

                row.style.display = matchesText && matchesRole ? "" : "none";
            });
        }

        searchInput.addEventListener('keyup', filterTable);
        filterSelect.addEventListener('change', filterTable);
    </script>
}
