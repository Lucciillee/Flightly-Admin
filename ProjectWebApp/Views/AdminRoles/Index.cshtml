@model List<ProjectWebApp.ViewModels.AdminUserVM>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Role Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-roles.css" asp-append-version="true" />
}

<div class="content stack">

    <!-- ================= CREATE EMPLOYEE FORM ================= -->
    <div class="card">
        <div class="card-h">
            <h2>Create Employee Account</h2>
        </div>

        <div class="card-b">
            <form asp-action="CreateEmployee" asp-controller="AdminRoles" method="post" class="grid2 small-gap">

                <label class="field">
                    <span>First Name</span>
                    <input type="text" name="FirstName" placeholder="e.g., Ahmed" required />
                </label>

                <label class="field">
                    <span>Last Name</span>
                    <input type="text" name="LastName" placeholder="e.g., Ali" required />
                </label>

                <label class="field">
                    <span>Email</span>
                    <input type="email" name="Email" placeholder="e.g., ahmed@domain.com" required />
                </label>

                <label class="field">
                    <span>Temporary Password</span>
                    <input type="text" name="TempPassword" placeholder="At least 6 characters" required />
                </label>

                <label class="field">
                    <span>Role</span>
                    <select name="Role">
                        <option value="Admin">Admin</option>
                        <option value="Sub-Admin">Sub-Admin</option>
                    </select>
                </label>

                <div class="actions full-row">
                    <button class="btn primary">Create Account</button>
                </div>

            </form>


        </div>
    </div>

    <!-- ================= USER LIST ================= -->
    <div class="card">

        <div class="card-h">

            <div class="left-tools">
                <!-- Search -->
                <div class="search-bar">
                    <input type="text" id="adminSearch" placeholder="Search users..." />
                </div>

                <!-- Filter -->
                <select id="roleFilter" class="filter-select">
                    <option value="">All Roles</option>
                    <option value="Admin">Admin</option>
                    <option value="Sub-Admin">Sub-Admin</option>
                    <option value="Active">Active</option>
                    <option value="Blocked">Blocked</option>
                </select>
            </div>

            <button class="btn action-btn" onclick="location.reload()">🔄 Refresh</button>

        </div>


        <div class="card-b">

            <table class="table" id="adminsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="right">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge @(user.Role == "Admin" ? "ok" : "")">@user.Role</span>
                            </td>

                            <td>
                                <span class="badge @(user.IsDeleted ? "danger" : "ok")">
                                    @(user.IsDeleted ? "Blocked" : "Active")
                                </span>
                            </td>

                            <td class="right">
                                @if (!user.IsDeleted)
                                {
                                    <form asp-action="DeleteEmployee" asp-controller="AdminRoles" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@user.IdentityUserId" />
                                        <button class="btn small danger">Delete</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="RestoreEmployee" asp-controller="AdminRoles" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@user.IdentityUserId" />
                                        <button class="btn small">Restore</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>


            </table>

        </div>
    </div>

</div>

@section Scripts {
    <script>
        const searchInput = document.getElementById('adminSearch');
        const filterSelect = document.getElementById('roleFilter');
        const rows = document.querySelectorAll('#adminsTable tbody tr');

                function filterTable()  {
            const text = searchInput.value.toLowerCase();
            const filter = filterSelect.value;

            rows.forEach(row => {
                const rowText = row.textContent.toLowerCase();
                const rowRole = row.children[2].textContent.trim();
                const rowStatus = row.children[3].textContent.trim();

                const matchesText = rowText.includes(text);

                let matchesFilter = false;

                if (filter === "" || filter === "All") {
                    matchesFilter = true;
                }
                else if (filter === "Admin" || filter === "Sub-Admin") {
                    matchesFilter = rowRole === filter;
                }
                else if (filter === "Active") {          
                    matchesFilter = rowStatus === "Active";
                  }   
                else if (filter === "Blocked") {
                    matchesFilter = rowStatus === "Blocked";
                }

                row.style.display = (matchesText && matchesFilter) ? "" : "none";
            });
        }

        searchInput.addEventListener('keyup', filterTable);
        filterSelect.addEventListener('change', filterTable);
    </script>
}
