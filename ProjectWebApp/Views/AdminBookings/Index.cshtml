@model List<ProjectWebApp.ViewModels.AdminBookingVM>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "All Bookings";

    var searchValue = Context.Request.Query["search"];
    var statusValue = Context.Request.Query["statusId"];
    var dateValue = Context.Request.Query["date"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-bookings.css" asp-append-version="true" />
}

<div class="content">
    <div class="card">
        <div class="card-h">Bookings</div>
        <div class="card-b">

            <!-- 🔍 Search & Filter Bar must be INSIDE the form -->
            <form method="get">
                <div class="filter-bar">
                    <input type="text"
                           name="search"
                           placeholder="Search by Ref # or User..."
                           value="@searchValue" />

                    <select name="statusId">
                        <option value="">All Statuses</option>
                        @foreach (var s in (List<ProjectWebApp.Model.BookingStatus>)ViewBag.Statuses)
                        {
                            <option value="@s.StatusId"
                                    selected="@(statusValue == s.StatusId.ToString() ? "selected" : null)">
                                @s.StatusName
                            </option>
                        }
                    </select>


                    <input type="date"
                           name="date"
                           value="@dateValue" />

                    <button class="btn primary" type="submit">
                        Search
                    </button>
                    <a href="/AdminBookings" class="btn" style="display:flex; align-items:center; gap:6px;">
                        🔄 Refresh
                    </a>
                </div>
            </form>

            <!-- 📋 Bookings Table (UNCHANGED DESIGN) -->
            <div class="table-scroll">
            <table class="table">
                <thead>
                    <tr>
                        <th>Ref</th>
                        <th>Passenger</th>
                        <th>Flight</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.RefNumber</td>
                            <td>@b.UserName</td>
                            <td>@b.FlightInfo</td>
                            <td>@b.BookingDate.ToString("yyyy-MM-dd")</td>

                            <td>
                                @if (b.Status == "Confirmed")
                                {
                                    <span class="badge ok">Confirmed</span>
                                }
                                else if (b.Status == "Cancelled")
                                {
                                    <span class="badge bad">Cancelled</span>
                                }
                                else
                                {
                                    <span class="badge">@b.Status</span>
                                }
                            </td>

                            <td>BHD @b.TotalAmount.ToString("0.00")</td>

                            <td class="right">
                                <a class="btn small"
                                   href="/AdminBookingDetails/Index/@b.BookingId">
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/admin-bookings.js" asp-append-version="true"></script>
}


