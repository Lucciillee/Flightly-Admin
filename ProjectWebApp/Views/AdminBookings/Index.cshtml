@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "All Bookings";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-bookings.css" asp-append-version="true" />
}

<div class="content">
    <div class="card">
        <div class="card-h">Bookings</div>
        <div class="card-b">

            <!-- 🔍 Search & Filter Bar -->
            <div class="filter-bar">
                <input type="text" placeholder="Search by Ref # or User..." />
                <select>
                    <option value="">All Statuses</option>
                    <option value="confirmed">Confirmed</option>
                    <option value="pending">Pending</option>
                    <option value="cancelled">Cancelled</option>
                </select>
                <input type="date" />
                <button class="btn primary">Search</button>
            </div>

            <!-- 📋 Bookings Table -->
            <table class="table">
                <thead>
                    <tr>
                        <th>Ref</th>
                        <th>User</th>
                        <th>Flight</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#BK-10421</td>
                        <td>Rana A.</td>
                        <td>BAH→DXB (GF 008)</td>
                        <td>2025-10-30</td>
                        <td><span class="badge ok">Confirmed</span></td>
                        <td>$420</td>
                        <td class="right">
                            <a class="btn small" asp-controller="AdminBookingDetails" asp-action="Index">Details</a>
                        </td>
                    </tr>
                    <tr>
                        <td>#BK-10420</td>
                        <td>Guest</td>
                        <td>BAH→DOH (QR 271)</td>
                        <td>2025-10-22</td>
                        <td><span class="badge warn">Pending</span></td>
                        <td>$365</td>
                        <td class="right">
                            <a class="btn small" asp-controller="AdminBookingDetails" asp-action="Index">Details</a>
                        </td>
                    </tr>
                    <tr>
                        <td>#BK-10419</td>
                        <td>Ali M.</td>
                        <td>BAH→RUH (SV 112)</td>
                        <td>2025-11-05</td>
                        <td><span class="badge bad">Cancelled</span></td>
                        <td>$0</td>
                        <td class="right">
                            <a class="btn small" asp-controller="AdminBookingDetails" asp-action="Index">Details</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
