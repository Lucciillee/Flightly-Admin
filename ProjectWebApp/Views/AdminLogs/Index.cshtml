@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "System Logs & Audit Trail";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-logs.css" asp-append-version="true" />
}

<div class="content">

    <div class="card">
        <div class="card-h flex-between">
            <span>System Logs</span>

            <div class="actions">
                <a href="/AdminLogs" class="btn outline">Refresh</a>
                <a href="/AdminLogs/ExportCsv" class="btn outline">Export CSV</a>
            </div>
        </div>

        <div class="card-b">

            <!-- Search + Filter -->
            <div class="search-bar left">
                <form method="get" asp-action="Index" class="flex">

                    <input type="text"
                           name="search"
                           placeholder="Search…"
                           value="@Context.Request.Query["search"]" />

                    <select name="actionType">
                        @{
                            string selectedType = Context.Request.Query["actionType"];
                            string[] actions = new[]
                            {
                        "",
                        "Login",
                        "Resend Email",
                        "Refund",
                        "Cancel Booking",
                        "Report Generated",
                        "Backup",
                        "Backup Failed",
                        "Restore",
                        "Restore Failed",
                        "Logs Exported"
                        };
                        }

                        @foreach (var action in actions)
                        {
                            var isSelected = string.Equals(selectedType, action, StringComparison.OrdinalIgnoreCase);

                            if (isSelected)
                            {
                                <option value="@action" selected="selected">
                                    @(string.IsNullOrEmpty(action) ? "All Actions" : action)
                                </option>
                            }
                            else
                            {
                                <option value="@action">
                                    @(string.IsNullOrEmpty(action) ? "All Actions" : action)
                                </option>
                            }
                        }
                    </select>


                    <button class="btn primary" type="submit">Filter</button>
                </form>
            </div>

            <!-- Logs Table -->
            <div class="scroll">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User Email</th>
                            <th>Action</th>
                            <th>Description</th>
                            <th>Timestamp</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var log in Model)
                        {
                            string action = log.ActionType ?? "";

                            string badgeClass = action switch
                            {
                                "Login" => "blue",
                                "Resend Email" => "orange",
                                "Refund" => "green",
                                "Cancel Booking" => "red",
                                "Report Generated" => "purple",
                                "Backup" => "teal",
                                "Backup Failed" => "dark-red",
                                "Restore" => "yellow",
                                "Restore Failed" => "dark-red",
                                "Logs Exported" => "indigo",
                                _ => "gray"
                            };
                        <tr>
                            <td>@log.LogId</td>
                            <td>@log.User?.Email</td>

                            <td>
                                <span class="badge @badgeClass">@action</span>
                            </td>

                            <td>@log.Description</td>

                            <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>
