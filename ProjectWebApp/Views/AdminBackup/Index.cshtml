@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Backup & Restore";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-backup.css" asp-append-version="true" />
}

<div class="content">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">
            @TempData["Error"]
        </div>
    }
    <section class="stack">
        <!-- Backup Section -->
        <div class="card">
            <div class="card-h">Create Backup</div>
            <div class="card-b">
                <p class="muted">Generate a secure backup of all system data and configurations.</p>

                <div class="status">
                    <span class="label">Last Backup:</span>
                    <span class="value">@ViewBag.LastBackup</span>
                </div>

                <form method="post" asp-action="BackupNow">
                    <button class="btn primary full" type="submit">
                        Backup Now
                    </button>
                </form>
            </div>
        </div>

        <!-- Restore Section -->
        <div class="card">
            <div class="card-h">Restore</div>
            <div class="card-b">
                <p class="muted">Select a backup entry below to restore the database.</p>
                <div class="table-scroll">
                <table class="table">
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Restore</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Backups)
                        {
                            <tr>
                                <td>@item.FileName</td>
                                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <span class="status-badge @(item.BackupStatus == "Success" ? "success" : "error")">
                                            @item.BackupStatus
                                        </span>
                                    </td>
                                <td>
                                    <form method="post" asp-action="Restore">
                                        <input type="hidden" name="backupId" value="@item.BackupId" />
                                        <button class="btn danger small">Restore</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>


    </section>
</div>
