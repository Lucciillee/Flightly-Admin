@page
@model LoginModel
@{
    Layout = "_AdminAuthLayout";
    ViewData["Title"] = "Admin Login";
}

<section class="auth-container fade-in">
    <div class="auth-card">
        <h1>Admin Portal</h1>
        <p class="subtitle">Secure access to Flightly Administration</p>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email -->
            <div class="field">
                <label asp-for="Input.Email">Email Address</label>
                <input asp-for="Input.Email" type="email" placeholder="admin@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="field">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="remember">
                <input asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe">Remember this device</label>
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn primary full">
                Log In
            </button>

            <!-- Links -->
            <div class="auth-links">
                <a asp-page="./ForgotPassword">Forgot your password?</a>
                <a asp-page="./ResendEmailConfirmation">Resend confirmation email</a>
            </div>
        </form>
    </div>
</section>
